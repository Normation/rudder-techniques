<POLICY name="Monitor a file or directory content">
  <DESCRIPTION>This policy checks wether a file or directory has changed between agent executions and report changes if any</DESCRIPTION>

  <MULTIINSTANCE>true</MULTIINSTANCE>

  <COMPATIBLE>
    <OS>Every OS</OS>
    <AGENT version=">= 3.2.0">cfengine-community</AGENT>
  </COMPATIBLE>

  <BUNDLES>
    <NAME>file_alteration_monitor</NAME>
  </BUNDLES>

  <TMLS>
    <TML name="fileAlterationMonitoring"/>
  </TMLS>
    
  <TRACKINGVARIABLE>
    <SAMESIZEAS>MONITOR_ENTITY_NAME</SAMESIZEAS>
  </TRACKINGVARIABLE>

  <SECTIONS>
    <SECTION name="File or directory to monitor" multivalued="true" component="true" componentKey="MONITOR_ENTITY_NAME">
      <INPUT>
        <NAME>MONITOR_ENTITY_NAME</NAME>
        <DESCRIPTION>Path to the file or directory to monitor</DESCRIPTION>
      </INPUT>
    </SECTION>
  </SECTIONS>

</POLICY>
